<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/carvbg"
    android:paddingHorizontal="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:text="@string/Ride"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="40sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/StartLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Start Location"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:background="@drawable/rectangularfield"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view1"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/EndLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="End Location"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:background="@drawable/rectangularfield"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view3"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view4"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/date"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:hint="Select Date"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:background="@drawable/rectangularfield"/>
            <EditText
                android:id="@+id/time"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:hint="Select Time"
                android:paddingVertical="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:background="@drawable/rectangularfield"/>


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_weight="1"
                android:id = "@+id/spinner_seat_no"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:prompt = "@string/app_name"
                android:tooltipText="Seat"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectangularfield"
                android:paddingLeft="20dp"
                />

            <Spinner
                android:id="@+id/spinner_rider_type"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                android:overScrollMode="ifContentScrolls"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:tooltipText="RiderType"
                android:background="@drawable/rectangularfield"


                android:paddingLeft="20dp"
                android:prompt="@string/app_name" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/updateProfileTxt"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="Update Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end" />

    <Button
        android:id="@+id/SubmitPassengerButton"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="150dp"
        android:text="Post ride"
        android:textAllCaps="true"
        android:textSize="25dp" />
</LinearLayout>