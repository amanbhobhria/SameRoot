<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#80CEF1"
        android:paddingHorizontal="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:text="@string/driver_detail"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="40sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/D_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="@string/name"
            android:layout_centerInParent="true"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/rectangularfield"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/C_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_your_vehicle_number"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="text"
            android:paddingLeft="60dp"
            android:background="@drawable/rectangularfield"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/C_model"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_your_car_model"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="text"
            android:paddingLeft="60dp"
            android:background="@drawable/rectangularfield"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/C_adhaar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_your_adhaar_number"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="text|number"
            android:paddingLeft="60dp"
            android:background="@drawable/rectangularfield"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/p_City"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_your_city_name"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="text"
            android:paddingLeft="60dp"
            android:background="@drawable/rectangularfield"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/Driver_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_your_mobile_number"
            android:paddingVertical="15dp"
            android:textColor="#000000"
            android:inputType="phone"
            android:paddingLeft="60dp"
            android:background="@drawable/rectangularfield"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="#EFD5D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/SubmitDriverButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="#3F51B5"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25sp" />



    </LinearLayout>
</ScrollView>