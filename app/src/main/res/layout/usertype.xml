<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="30dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/backButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginBottom="200dp"
            android:layout_marginRight="0dp"
            android:background="#00BDE889">

        </Button>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/house" />
    </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_marginTop="2dp"
            android:text="Post Ride"
            android:textColor="#FF5722"
            android:textSize="40dp"
            android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <Button
            android:id="@+id/postBTN"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#9703A9F4"
            android:text="@string/post_ride1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:background="#00DD0D0D"
            android:foreground="@drawable/car" />

        <TextView
            android:layout_marginTop="20sp"
            android:layout_marginLeft="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3F51B5"
            android:textSize="15sp"
            android:textStyle="italic"
            android:text="@string/a"
            android:layout_below="@+id/postBTN"
            />

        <Button
            android:id="@+id/GoToDashboard"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="#9703A9F4"
            android:text="Go To Dashboard"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="25dp" />


    </RelativeLayout>


</LinearLayout>
</ScrollView>